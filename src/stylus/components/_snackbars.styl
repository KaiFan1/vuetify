@import '../bootstrap'

.snack
  position: fixed
  display: flex
  align-items: center
  z-index: 1000
  color: $snackbar-color
  background-color: $snackbar-background-color
  font-size: 14px
  left: 0
  right: 0
  elevation(6)

  &--absolute
    position: absolute

  &--top
    top: 0

  &--bottom
    bottom: 0

  &__content
    width: 100%
    height: 48px
    padding: 14px 24px
    display: flex
    align-items: center
    justify-content: space-between

    .btn
      color: $snackbar-color
      margin: 0 -16px 0 8px
      min-width: 0px

      &__content::before
        display: none

  @media $display-breakpoints.xs-only
    &--multi-line &__content
      height: 80px
      padding: 24px

    &--vertical &__content
      height: 112px
      padding: 24px 24px 14px
      flex-direction: column
      align-items: initial

      .btn
        align-self: flex-end

@media $display-breakpoints.sm-and-up
  .snack
    margin: 0 auto
    border-radius: 2px
    max-width: 568px
    min-width: 288px

    &--left, &--right
      &^[0]--top
        transform: translateY($snackbar-corner-offset)
      &^[0]--bottom
        transform: translateY(0 - $snackbar-corner-offset)

    &--left
      left: $snackbar-corner-offset
      right: auto

    &--right
      right: $snackbar-corner-offset
      left: auto

    &__content .btn
      margin-left: 32px

.snack-transition
  &-enter-active,
  &-leave-active
    transition: transform .4s $transition.swing
    .snack__content
      transition: opacity .4s linear

  &-enter
    .snack__content
      opacity: 0

  &-enter-to,
  &-leave
    .snack__content
      opacity: 1

  &-enter,
  &-leave-to
    &.snack.snack--top
      transform: translateY(-100%)
    &.snack.snack--bottom
      transform: translateY(100%)
